@page "/diagnostics"

@using System.Net.Http
@using System.Net.Http.Json
@inject HttpClient Http

<h1>Diagnoses</h1>

@if (diagnostics == null)
{
    <p>Loading...</p>
}
else
{
    <p>@diagnostics.Count items</p>

    @foreach (var diagnostic in diagnostics)
    {
        <div class="diagnostic-item">
            <div class="icon">
                <i class="@diagnostic.Icon"></i>
            </div>
            <div class="diagnostic-content">
                <h3>@diagnostic.Title <span class="cost">Estimated costs: @diagnostic.Cost</span></h3>
                <p>@diagnostic.Description</p>
            </div>
        </div>
    }
}

<button @onclick="FetchNewData">Update Diagnoses</button>

@code {
    private List<DiagnosticItem> diagnostics;

    protected override async Task OnInitializedAsync()
    {
        //Load the initial JSON data
        diagnostics = await Http.GetFromJsonAsync<List<DiagnosticItem>>("data/diagnostics.json");
    }

    private async Task FetchNewData()
    {
        // Fetch the updated JSON data from the remote server (simulated with a local file here)
        diagnostics = await Http.GetFromJsonAsync<List<DiagnosticItem>>("data/updated-diagnostics.json");

        // Force the UI to refresh with the new data
        StateHasChanged();
    }
}
