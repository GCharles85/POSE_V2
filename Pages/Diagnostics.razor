@page "/diagnostics"

@using System.Net.Http
@using System.Net.Http.Json
@using System.Diagnostics
@using Diagnoses.Models
@inject HttpClient Http
@using Diagnoses.Context
@using Microsoft.EntityFrameworkCore
@inject DiagnosticContext DbContext

<h1>Diagnoses</h1>

@if (diagnostics == null)
{
    <p>Loading...</p>
}
else
{
    <p>@diagnostics.Count items</p>

    @foreach (var diagnostic in diagnostics)
    {
        <div class="diagnostic-item">
            <div class="icon">
                <i class="@diagnostic.Icon"></i>
            </div>
            <div class="diagnostic-content">
                <h3>@diagnostic.Title <span class="cost">Estimated costs: @diagnostic.Cost</span></h3>
                <p>@diagnostic.Description</p>
            </div>
        </div>
    }
}

<button @onclick="FetchPredictedData">Get AI Diagnosis</button>

@code {
    private List<DiagnosticItem> diagnostics;

    protected override async Task OnInitializedAsync()
    {
        // Load diagnostics from the database
        diagnostics = await DbContext.Diagnostics.ToListAsync();
    }

    private async Task FetchPredictedData()
    {
        // Example input data for the AI model
        var inputData = new { input = new[] { 1, 0, 0 } };

        // Fetch the predicted JSON data from the AI model API
        var response = await Http.PostAsJsonAsync("http://localhost:5000/predict", inputData);

        if (response.IsSuccessStatusCode)
        {
            var resultJson = await response.Content.ReadFromJsonAsync<DiagnosticItem>();
            
            // Add the new diagnostic to the list and save it to the database
            diagnostics.Add(resultJson);
            DbContext.Diagnostics.Add(resultJson);
            await DbContext.SaveChangesAsync();

            StateHasChanged();
        }
    }
}
