@page "/diagnostics"

@using System.Net.Http
@using System.Net.Http.Json
@using System.Diagnostics
@using Diagnoses.Models
@inject HttpClient Http

<h1>Diagnoses</h1>

@if (diagnostics == null)
{
    <p>Loading...</p>
}
else
{
    <p>@diagnostics.Count items</p>

    @foreach (var diagnostic in diagnostics)
    {
        <div class="diagnostic-item">
            <div class="icon">
                <i class="@diagnostic.Icon"></i>
            </div>
            <div class="diagnostic-content">
                <h3>@diagnostic.Title <span class="cost">Estimated costs: @diagnostic.Cost</span></h3>
                <p>@diagnostic.Description</p>
            </div>
        </div>
    }
}

<button @onclick="FetchPredictedData">Get AI Diagnosis</button>

@code {
    private List<DiagnosticItem> diagnostics;

    protected override async Task OnInitializedAsync()
    {
        // Start the Flask API
        StartFlaskApi();

        // Load the initial JSON data
        diagnostics = await Http.GetFromJsonAsync<List<DiagnosticItem>>("data/initial-diagnostics.json");
    }

    private async Task FetchPredictedData()
    {
        // Example input data for the AI model
        var inputData = new { input = new[] { 1, 0, 0 } };

        // Fetch the predicted JSON data from the AI model API
        var response = await Http.PostAsJsonAsync("http://localhost:5000/predict", inputData);

        if (response.IsSuccessStatusCode)
        {
            var resultJson = await response.Content.ReadFromJsonAsync<List<DiagnosticItem>>();
            diagnostics = resultJson;
            StateHasChanged();
        }
    }

    private void StartFlaskApi()
    {
        var start = new ProcessStartInfo
        {
            FileName = "python",
            Arguments = "app.py",
            WorkingDirectory = @"C:\path\to\your\flask\app\directory", // Update this to the correct path
            UseShellExecute = false,
            RedirectStandardOutput = true,
            RedirectStandardError = true,
            CreateNoWindow = true
        };

        var process = new Process
        {
            StartInfo = start
        };

        process.Start();
    }
}
